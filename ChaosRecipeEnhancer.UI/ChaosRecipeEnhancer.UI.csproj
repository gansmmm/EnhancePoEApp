		<UseWPF>true</UseWPF>
		<UseWindowsForms>true</UseWindowsForms>
		<GenerateAssemblyInfo>false</GenerateAssemblyInfo>
		<GenerateManifests>true</GenerateManifests>
		<SignManifests>false</SignManifests>
		<ApplicationManifest>Properties\app.manifest</ApplicationManifest>
	</PropertyGroup>
	<ItemGroup>
	  <None Remove="Assets\Fonts\Password.ttf" />
	  <None Remove="Assets\Icons\CREIcon.ico" />
	  <None Remove="Assets\Images\amulet.png" />
	  <None Remove="Assets\Images\belt.png" />
	  <None Remove="Assets\Images\boots.png" />
	  <None Remove="Assets\Images\chest.png" />
	  <None Remove="Assets\Images\gloves.png" />
